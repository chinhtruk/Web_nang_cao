        <% } else { %>
            <!-- Shopping Cart Table -->
            <table class="table table-hover mt-3">
                <thead class="table-warning text-center">
                    <tr>
                        <th>H√¨nh ·∫£nh</th>
                        <th>S·∫£n ph·∫©m</th>
