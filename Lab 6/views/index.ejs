<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Shop Online</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <style>
        body { background-color: #f5f5f5; }
        .navbar { background-color: #ff4500 !important; }
        .cart-button {
            position: relative;
            display: inline-block;
        }
        .cart-count {
            font-weight: bold;
            font-size: 14px;
            color: white;
            background: red;
            border-radius: 50%;
            padding: 5px 10px;
            position: absolute;
            top: -10px;
            right: -10px;
            display: <%= (cart && cart.length > 0) ? 'inline-block' : 'none' %>;
        }
        .card { transition: all 0.3s ease-in-out; }
        .card:hover { transform: scale(1.05); }
        .card-img-top {
            width: 100%;
            height: 200px;
            object-fit: contain;
            background-color: white;
            padding: 10px;
        }
        .btn-cart { background-color: #ff4500; color: white; }
        .btn-cart:hover { background-color: #d14000; }

        /* Hi·ªáu ·ª©ng s·∫£n ph·∫©m bay v√†o gi·ªè h√†ng */
        .flying-product {
            position: fixed;
            width: 50px;
            height: 50px;
            transition: all 0.7s ease-in-out;
            z-index: 9999;
            opacity: 1;
        }
    </style>
</head>
<body>

    <!-- Navigation Bar -->
    <nav class="navbar navbar-dark p-3">
        <div class="container">
            <a class="navbar-brand text-white" href="/">üõçÔ∏è Shopee Clone</a>
            <a href="/cart" class="btn btn-warning position-relative cart-button">
                <i class="fa-solid fa-cart-shopping"></i> Gi·ªè h√†ng
                <span id="cart-count" class="cart-count">
                    <%= (cart && cart.length > 0) ? cart.reduce((sum, item) => sum + item.quantity, 0) : 0 %>
                </span>
            </a>
        </div>
    </nav>

    <!-- Product List -->
    <div class="container mt-4">
        <h1 class="text-center text-danger mb-4">‚ú® S·∫£n Ph·∫©m N·ªïi B·∫≠t ‚ú®</h1>
        <div class="row">
            <% products.forEach(product => { %>
                <div class="col-md-3 mb-4">
                    <div class="card shadow-lg">
                        <img src="<%= product.image %>" class="card-img-top product-img" alt="<%= product.name %>">
                        <div class="card-body text-center">
                            <h5 class="card-title"><%= product.name %></h5>
                            <p class="price"><%= new Intl.NumberFormat('vi-VN', { style: 'currency', currency: 'VND' }).format(product.price) %></p>
                            <a href="/product/<%= product._id %>" class="btn btn-outline-primary">Xem chi ti·∫øt</a>
                            <button class="btn btn-cart add-to-cart" data-id="<%= product._id %>" data-img="<%= product.image %>">
                                <i class="fa-solid fa-cart-plus"></i> Th√™m v√†o gi·ªè
                            </button>
                        </div>
                    </div>
                </div>
            <% }) %>
        </div>
    </div>

    <!-- Footer -->
    <footer class="text-center p-3 mt-4" style="background-color: #ff4500; color: white;">
        ¬© 2024 Shopee Clone. All rights reserved.
    </footer>

    <!-- JavaScript for Add-to-Cart Feature -->
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            const cartCount = document.getElementById("cart-count");

            document.querySelectorAll(".add-to-cart").forEach(button => {
                button.addEventListener("click", function () {
                    const productId = this.getAttribute("data-id");
                    const productImg = this.getAttribute("data-img");
                    const cartIcon = document.querySelector(".fa-cart-shopping");

                    // Send AJAX Request to Add to Cart
                    fetch(`/cart/add/${productId}`, {
                        method: "POST",
                        headers: { "Content-Type": "application/json" }
                    })
                    .then(response => response.json())
                    .then(data => {
                        if (data.success) {
                            // ‚úÖ Update Cart Count Instantly
                            cartCount.textContent = data.cartCount;
                            cartCount.style.display = "inline-block";

                            // ‚úÖ Animate Flying Product into Cart
                            const imgClone = document.createElement("img");
                            imgClone.src = productImg;
                            imgClone.classList.add("flying-product");
                            document.body.appendChild(imgClone);

                            const rect = this.getBoundingClientRect();
                            const cartRect = cartIcon.getBoundingClientRect();

                            imgClone.style.left = `${rect.left + window.scrollX}px`;
                            imgClone.style.top = `${rect.top + window.scrollY}px`;

                            setTimeout(() => {
                                imgClone.style.left = `${cartRect.left + window.scrollX}px`;
                                imgClone.style.top = `${cartRect.top + window.scrollY}px`;
                                imgClone.style.width = "30px";
                                imgClone.style.height = "30px";
                            }, 100);

                            setTimeout(() => imgClone.remove(), 700);
                        }
                    })
                    .catch(err => console.error("L·ªói khi th√™m v√†o gi·ªè h√†ng:", err));
                });
            });
        });
    </script>

</body>
</html>
